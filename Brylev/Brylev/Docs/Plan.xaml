<Window x:Class="Brylev.Docs.Plan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brylev.Docs"
        mc:Ignorable="d"
        Title="Plan" Height="450" Width="800">
	<Grid>
		<DatePicker x:Name="YearDatePicker" HorizontalAlignment="Left" Margin="80,17,0,0" VerticalAlignment="Top"/>
		<ComboBox x:Name="ContractComboBox" HorizontalAlignment="Left" Margin="255,19,0,0" VerticalAlignment="Top" Width="120" IsEditable="True" Text="Номер договора"/>
		<Button HorizontalAlignment="Left" Margin="77,89,0,0" VerticalAlignment="Top" Height="50" Width="105" RenderTransformOrigin="-0.048,-0.499" Click="Button_Click">
			<TextBlock Text="Сформировать документ" TextWrapping="Wrap" TextAlignment="Center"/>
		</Button>
	</Grid>
</Window>
